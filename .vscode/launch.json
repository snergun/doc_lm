    "version": "0.2.0",
    "configurations": [
    
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}"
        },
        {
            "name": "Python Debugger: Evaluate Model",
            "type": "debugpy",
            "python": "/opt/conda/envs/doc_lm/bin/python",
            "request": "launch",
            "program": "cal_ppl.py",
            "console": "integratedTerminal",
            "args": [
                "--data", "data/penn",
                "--save", "trainedmodel/ptb/additional_finetuned.pt",
                "--bptt", "1000",
                ],
        }
    ]
}